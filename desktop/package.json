{
  "name": "@monorepo/desktop",
  "version": "0.1.0",
  "description": "Desktop app for the monorepo",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^26.0.20"
  },
  "build": {
    "appId": "com.monorepo.desktop",
    "productName": "Monorepo Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*"
    ]
  }
}
